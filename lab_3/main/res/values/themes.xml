<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.SolarProfitCalculator" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/solar_primary</item>
        <item name="colorPrimaryVariant">@color/solar_primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/solar_secondary</item>
        <item name="android:statusBarColor">@color/solar_primary_dark</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
    
    <style name="CardStyle">
        <item name="android:layout_margin">16dp</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/solar_card_background</item>
    </style>
    
    <style name="InputFieldStyle">
        <item name="android:layout_marginHorizontal">24dp</item>
        <item name="android:layout_marginVertical">8dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/solar_text_primary</item>
        <item name="android:background">@drawable/input_background</item>
        <item name="android:textColorHint">@color/solar_text_secondary</item>
    </style>
    
    <style name="ButtonStyle">
        <item name="android:layout_marginHorizontal">24dp</item>
        <item name="android:layout_marginVertical">8dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/solar_primary</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:elevation">4dp</item>
    </style>
</resources>
